<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/space_small_x">

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        style="@style/card_view_style">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/space_small_xx">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_small_x"
                android:layout_marginTop="@dimen/space_small_xx">

                <EditText
                    android:id="@+id/passwordReset"
                    style="@style/edit_text_style"
                    android:backgroundTint="@color/light_grey"
                    android:gravity="left|center"
                    android:hint="@string/enter_password_reset_code"
                    android:inputType="number"
                    android:textColor="@color/grey"
                    android:textColorHint="@color/grey" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_small_x"
                android:layout_marginTop="@dimen/space_small_xxx">

                <EditText
                    android:id="@+id/password"
                    style="@style/edit_text_style"
                    android:backgroundTint="@color/light_grey"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:paddingRight="@dimen/space_large_xxx_c"
                    android:textColor="@color/grey"
                    android:textColorHint="@color/grey" />

                <Button
                    android:id="@+id/showPassword"
                    style="@style/plain_button_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:padding="@dimen/space_small_xx"
                    android:text="@string/show"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_small"
                    android:textStyle="bold" />
            </FrameLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/saveButton"
        style="@style/submit_button_style"
        android:layout_marginBottom="@dimen/space_small_xx"
        android:layout_marginLeft="@dimen/space_small_xx"
        android:layout_marginRight="@dimen/space_small_xx"
        android:layout_marginTop="@dimen/space_small_x"
        android:text="@string/save" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleInverse"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="gone" />

    <Button
        android:id="@+id/resendResetCode"
        style="@style/plain_button_style"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/space_medium"
        android:gravity="center"
        android:text="@string/resend_reset_code_button_text"
        android:textColor="@color/black" />

</LinearLayout>
