<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/signUpForm"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:visibility="gone">

    <EditText
        android:id="@+id/fullName"
        style="@style/edit_text_style"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:background="@color/transparent"
        android:gravity="left|center"
        android:hint="Full Name"
        android:inputType="phone" />

    <EditText
        android:id="@+id/email"
        style="@style/edit_text_style"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:background="@color/transparent"
        android:gravity="left|center"
        android:hint="Email"
        android:inputType="textWebEmailAddress" />

    <EditText
        android:id="@+id/signUpMobile"
        style="@style/edit_text_style"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:background="@color/transparent"
        android:gravity="left|center"
        android:hint="Mobile"
        android:inputType="phone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/signUpPassword"
            style="@style/edit_text_style"
            android:layout_width="0dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="0.8"
            android:background="@color/transparent"
            android:gravity="left|center"
            android:hint="Password"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/showSignUpPassword"
            style="@style/plain_button_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="0.2"
            android:gravity="right|bottom"
            android:text="SHOW"
            android:textSize="10sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Spinner
        android:id="@+id/bankName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:entries="@array/bank_name"
        android:gravity="left|center"
        android:prompt="@string/bank_prompt" />

    <EditText
        android:id="@+id/accountName"
        style="@style/edit_text_style"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:background="@color/transparent"
        android:gravity="left|center"
        android:hint="Account Name" />

    <EditText
        android:id="@+id/accountNumber"
        style="@style/edit_text_style"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:background="@color/transparent"
        android:gravity="left|center"
        android:hint="Account Number"
        android:inputType="number" />

    <Spinner
        android:id="@+id/accountType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:entries="@array/account_type"
        android:gravity="left|center"
        android:prompt="@string/account_prompt" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:visibility="visible">

        <Button
            android:id="@+id/signUpButton"
            style="@style/submit_button_style"
            android:text="SIGN UP" />

        <ProgressBar
            android:id="@+id/signUpProgressBar"
            style="?android:attr/progressBarStyleInverse"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="gone" />
    </LinearLayout>

    <Button
        android:id="@+id/showSignInForm"
        style="@style/plain_button_style"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_weight="0.2"
        android:gravity="center"
        android:text="Already a member? Sign In!" />
</LinearLayout>

